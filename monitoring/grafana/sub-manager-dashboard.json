{
  "uid": "sub-manager-api",
  "title": "Sub Manager API",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP RPS",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(sub_manager_http_requests_total[1m]))",
          "legendFormat": "rps",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP p95 Latency (s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(sub_manager_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx Error Rate",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(sub_manager_http_requests_total{status=~\"5..\"}[5m])) / clamp_min(sum(rate(sub_manager_http_requests_total[5m])), 1)",
          "legendFormat": "5xx_ratio",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Node CPU %",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sub_manager_node_cpu_percent",
          "legendFormat": "{{node_name}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Online Clients by Node",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sub_manager_node_online_clients",
          "legendFormat": "{{node_name}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Traffic Total by Node (bytes)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "sub_manager_node_traffic_total_bytes",
          "legendFormat": "{{node_name}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Node Availability",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "sub_manager_node_available",
          "legendFormat": "{{node_name}}",
          "refId": "A"
        }
      ]
    }
  ]
}
